<%- include('partials/header') %> 

<div class="mt-4">
    <div class="card">
        <div class="card-header">
            <h3><%= article.title %></h3>
        </div>
        <div class="card-body">
            <%- article.sanitizedHtml %>
        </div>
        <div class="card-footer">
            <p>Posted by: <%= article.auth %></p>
            <p>Date: <%= article.createdAt.toLocaleDateString('en-GB') %></p>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 