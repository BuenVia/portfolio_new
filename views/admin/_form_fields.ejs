<div class="form-group">
    <label for="title">Title</label>
    <input type="text" value="<%= article.title %>" name="title" id="title" class="form-control" required>
</div>
<div class="form-group">
    <label for="auth">Author</label>
    <input type="text" value="<%= article.auth %>" name="auth" id="auth" class="form-control" required>
</div>

<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>
</div>

<div class="form-group">
    <label for="title">Password</label>
    <input type="text" name="password" id="password" class="form-control">
</div>

<a href="/admin" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Submit</button>