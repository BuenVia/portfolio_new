                    <div class=" mt-1"><p><i class="fa-brands fa-react"></i> React</p></div>
                    <div class=" mt-1"><p><i class="fa-brands fa-bootstrap"></i> BootStrap</p></div>
                    <div class=" mt-1"><p><i class="fa-brands fa-node-js"></i> Node JS</p></div>
                    <div class=" mt-1"><p><i class="fa-solid fa-database"></i> MongoDB</p></div>
                </div>
            </div>
        </div>
    </div>

    <!--PROJECTS--> 
    <div class="row mt-4 mb-3">
        <div class="col-md-8 mb-4">

            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">Projects</h5>
                </div>

                <div class="card-body">
                    <% projects.forEach(project => { %>
                        <div class="item-container">

                            <h5 class="card-title"><%= project.title %></h5>
                            <p class="card-text"><%= project.content %></p>
                            <div class="card-btn-cont">
                                <a href="<%= project.site %> " target="_blank" rel="noopener noreferrer"><button class="btn btn-sm btn-st"><i class="fa-solid fa-laptop-code"></i> Site</button></a>
                                <a href="<%= project.gitHub %>" target="_blank" rel="noopener noreferrer"><button class="btn btn-sm btn-st"><i class="fa-brands fa-github"></i> Github</button></a>
                            </div>
                        </div>
                    <% }) %> 
                </div>

            </div>
        
    
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md">
                        <div class="card-header">
                                <h5 class="card-title">Latest Blog Post</h5>
                        </div>
                        <div class="card-body">

                            <% blogPosts.forEach(post => { %>
                                <div class="item-container">
                                    
                                    <h4 class="card-title"><%= post.title %></h4>
                                    <p><%= post.date.toLocaleString('en-GB') %></p>
                                    <p class="card-text"><%= post.content.substring(0, 100) %>...</p>
                                    <a href="/blog" class="btn btn-sm btn-st">Read more</a>
                                    
                        </div>
                        <% }) %>
                    </div>
                </div>
                </div>
            </div>
        </div>

    </div>


</main>

